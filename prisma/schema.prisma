generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  telegramId      String    @unique
  username        String?
  firstName       String
  lastName        String?
  photoUrl        String?
  specialId       String    @unique
  referrals       Int       @default(0)
  stars           Int       @default(5)
  isVerified      Boolean   @default(false)
  isAdmin         Boolean   @default(false)
  isCheater       Boolean   @default(false)
  isBot           Boolean   @default(false)
  isBlocked       Boolean   @default(false)
  joinedChannel   Boolean   @default(false)
  ipAddress       String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  referrer        User?     @relation("ReferralRelation", fields: [referrerId], references: [id])
  referrerId      String?
  referredUsers   User[]    @relation("ReferralRelation")
  isPremium       Boolean   @default(false)
  lastActive      DateTime  @default(now())
}
